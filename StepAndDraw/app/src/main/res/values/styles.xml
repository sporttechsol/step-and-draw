<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseMaterialButton" parent="Theme.MaterialComponents.Light.Bridge">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:gravity">center</item>
        <item name="rippleColor">@color/grey_b6b</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
    </style>

    <style name="FullScreenAnimDialog" parent="@style/ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsTranslucent">false</item> <!-- removed -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ContentLoadingProgress">
        <item name="colorAccent">@color/orange_ff9</item>
    </style>

</resources>